#!/bin/sh
# Copyright (C) 2006 OpenWrt.org

. /lib/debug/dbg
. /lib/functions.sh
. /usr/share/libubox/jshn.sh

WIFIX=/usr/bin/wifix
WIFICLI=/usr/bin/wifi
PROFILEFILE="/lib/wifi/wifix_profile.ini"

usage() {
	cat <<EOF
Usage: $0 [up|down|detect|default|mode|vap|hostapd|wps|vlan|macfilter|radio|country|reload]
enables (default), disables or detects a wifi configuration.
EOF
}

ubus_wifi_cmd() {
	local cmd="$1"
	local dev="$2"

	json_init
	[ -n "$2" ] && json_add_string device "$2"
	ubus call network.wireless "$1" "$(json_dump)"
}

find_net_config() {(
	local vif="$1"
	local cfg
	local ifname

	config_get cfg "$vif" network

	[ -z "$cfg" ] && {
		include /lib/network
		scan_interfaces

		config_get ifname "$vif" ifname

		cfg="$(find_config "$ifname")"
	}
	[ -z "$cfg" ] && return 0
	echo "$cfg"
)}


bridge_interface() {(
	local cfg="$1"
	[ -z "$cfg" ] && return 0

	include /lib/network
	scan_interfaces

	for cfg in $cfg; do
		config_get iftype "$cfg" type
		[ "$iftype" = bridge ] && config_get "$cfg" ifname
		prepare_interface_bridge "$cfg"
		return $?
	done
)}

prepare_key_wep() {
	local key="$1"
	local hex=1

	echo -n "$key" | grep -qE "[^a-fA-F0-9]" && hex=0
	[ "${#key}" -eq 10 -a $hex -eq 1 ] || [ "${#key}" -eq 32 -a $hex -eq 1 ] || \
	[ "${#key}" -eq 26 -a $hex -eq 1 ] || {
		[ "${key:0:2}" = "s:" ] && key="${key#s:}"
        	key="$(echo -n "$key" | hexdump -ve '1/1 "%02x" ""')"
	}
	echo "$key"
}

wifi_fixup_hwmode() {
	local device="$1"
	local default="$2"
	local hwmode hwmode_11n

	config_get channel "$device" channel
	config_get hwmode "$device" hwmode
	case "$hwmode" in
		11ad) hwmode=ad;;
		11bg) hwmode=bg;;
		11a) hwmode=a;;
		11b) hwmode=b;;
		11g) hwmode=g;;
		11n*)
			hwmode_11n="${hwmode##11n}"
			case "$hwmode_11n" in
				a|g) ;;
				default) hwmode_11n="$default"
			esac
			config_set "$device" hwmode_11n "$hwmode_11n"
		;;
		*)
			hwmode=
			if [ "${channel:-0}" -gt 0 ]; then 
				if [ "${channel:-0}" -gt 14 ]; then
					hwmode=a
				else
					hwmode=g
				fi
			else
				hwmode="$default"
			fi
		;;
	esac
	config_set "$device" hwmode "$hwmode"
}

wifi_updown() {
	[ enable = "$1" ] && {
		wifi_updown disable "$2" "$3"
		scan_wifi
	}
	for driver in ${DRIVERS}; do (
		if eval "type pre_${driver}" 2>/dev/null >/dev/null; then
			eval "pre_${driver}" ${1}
		fi
	); done
	for device in ${2:-$DEVICES}; do (
		config_get disabled "$device" disabled
		[ 1 == "$disabled" ] && {
			echo "'$device' is disabled"
			set disable
		}
		config_get iftype "$device" type
		if eval "type ${1}_$iftype" 2>/dev/null >/dev/null; then
			eval "scan_$iftype '$device'"
			eval "${1}_$iftype '$device' '$3'" || echo "$device($iftype): ${1} failed"
		else
			echo "$device($iftype): Interface type not supported"
		fi
	); done
	for driver in ${DRIVERS}; do (
		if eval "type post_${driver}" 2>/dev/null >/dev/null; then
			eval "post_${driver}" ${1}
		fi
	); done
}

wifi_detect() {
	for driver in ${1:-$DRIVERS}; do (
		if eval "type detect_$driver" 2>/dev/null >/dev/null; then
			eval "detect_$driver" || echo "$driver: Detect failed" >&2
		else
			echo "$driver: Hardware detection not supported" >&2
		fi
	); done
}

wifi_unload() {
	wifi_updown "disable" "$1"
	for driver in ${1:-$DRIVERS}; do (
		if eval "type unload_$driver" 2>/dev/null >/dev/null; then
			eval "unload_$driver" || echo "$driver: unload failed" >&2
		else
			echo "$driver: wifi unload not supported" >&2
		fi
	); done
}

start_net() {(
	local iface="$1"
	local config="$2"
	local vifmac="$3"

	[ -f "/var/run/$iface.pid" ] && kill "$(cat /var/run/${iface}.pid)" 2>/dev/null
	[ -z "$config" ] || {
		include /lib/network
		scan_interfaces
		for config in $config; do
			setup_interface "$iface" "$config" "" "$vifmac"
		done
	}
)}

set_wifi_up() {
	local cfg="$1"
	local ifname="$2"
	uci_set_state wireless "$cfg" up 1
	uci_set_state wireless "$cfg" ifname "$ifname"
}

set_wifi_down() {
	local cfg="$1"
	local vifs vif vifstr

	[ -f "/var/run/wifi-${cfg}.pid" ] &&
		kill "$(cat "/var/run/wifi-${cfg}.pid")" 2>/dev/null
	uci_revert_state wireless "$cfg"
	config_get vifs "$cfg" vifs
	for vif in $vifs; do
		uci_revert_state wireless "$vif"
	done
}

scan_wifi() {
	local cfgfile="$1"
	local enablefilter=1
	DEVICES=
	MACLIST=
	config_cb() {
		local type="$1"
		local section="$2"

		# section start
		case "$type" in
			wifi-device)
				append DEVICES "$section"
				config_set "$section" vifs ""
				config_set "$section" ht_capab ""
			;;
		esac

		# section end
		config_get TYPE "$CONFIG_SECTION" TYPE
		case "$TYPE" in
			wifi-iface)
				config_get device "$CONFIG_SECTION" device
				config_get vifs "$device" vifs 
				append vifs "$CONFIG_SECTION"
				config_set "$device" vifs "$vifs"
			;;
			mac-filter)
				config_get_bool enablefilter filter enable 0
			;;
			mac-list)
			  config_get_bool enable "$CONFIG_SECTION" enable 1
			  [ "$enablefilter" = "1" -a "$enable" = "1" ] && {
					config_get mac "$CONFIG_SECTION" mac
					append MACLIST "$mac"
			  }
			;;
		esac
	}
	config_load "${cfgfile:-wireless}"
	CONFIG_APPEND=1
	config_load onemesh
	unset CONFIG_APPEND
	if eval "type wifi_fixup_config" 2>/dev/null >/dev/null; then
		wifi_fixup_config "${DEVICES}"
	fi
	unset MACLIST
	#Def in tplink_xxx.sh(xxx for mtk/brcm/intel) or tplink.sh(qca)
	init_all_vif_name
}

wifi_trap() {
	for driver in ${1:-$DRIVERS}; do (
		if eval "type trap_$driver" 2>/dev/null >/dev/null; then
			eval "trap_$driver" >&2
		fi
	); done
}

wifi_atf(){
	config_get atf_mode qcawifi atf_mode -1
	if [ ! -f ${WIFIX} ]; then
	    if [ $atf_mode = -1 ]; then 
	    	wifi_radio "$*";
	    else
	    	/etc/init.d/nrd stop;
		killall -s 9 meshd;
		killall -s 9 easymesh-controller;
		killall -s 9 easymesh-agent;
	    	unload_qcawificfg80211;
	    	scan_wifi;
	    	wifi_reload;
	    	/etc/init.d/nrd start;
		/etc/init.d/meshd start;
	    fi
	else
		if [ $atf_mode = -1 ]; then 
			local devs=${*:-$DEVICES}
			if [ "$devs" != "$DEVICES" ]; then
				local intf=$(echo $DEVICES | grep "${devs}")
				if [ -z "$intf" ]; then
					devs=$DEVICES
				fi
			fi
			tpdbg "/sbin/wifi, radio $devs"
			ubus call wifix update "{\"rname\":\"$devs\"}"
		else
			/etc/init.d/nrd stop;
			ubus call wifix reload;
			/etc/init.d/nrd start;
		fi
	fi
}

get_mld_vaps() {
    local vaps
    local vap="$1"
    local vifs
    local mld
    local tmpMld

    config_get mld "$vap" mld
    [ -z "$mld" ] && return 0

    for device in $DEVICES; do
        config_get vifs "$device" vifs
        for vif in $vifs; do
            #echo "$device $vif" > /dev/console
            config_get tmpMld "$vif" mld
            if [ "$tmpMld" = "$mld" ]; then
                append vaps "$vif"
            fi
        done
    done

    echo "$vaps"
}


DEVICES=
DRIVERS=
include /lib/wifi
lock /var/run/wifi.lock
scan_wifi
trap 'wifi_trap; exit' INT TERM ABRT QUIT ALRM

tpdbg "/sbin/wifi, $@"
action="$1"
shift 1

if [ ! -f ${WIFIX} ]; then
    case $action in
    	--help|help) usage;;
    	up) wifi_updown "enable" "$*";;
    	down) wifi_updown "disable" "$*";;
    	detect) wifi_detect "$*";;
    	default) wifi_default "$*";;
    	vap|hostapd) wifi_vap "$*";;
    	wpsswitch) wifi_wps_switch "$*";;
    	mode) wifi_mode "$*";;
    	radio) wifi_radio "$*";;
    	country) wifi_country "$*";;
    	wps) wifi_wps $*;;
    	vlan) wifi_vlan $*;;
    	macfilter) wifi_macfilter $*;;
    	atf) wifi_atf "$*";;
    	smart) wifi_smart $*;;
    	init) wifi_init "$*";;
    	led) wifi_led_set "$*";;
    	disconnsta) wifi_disconnect_stas "$*";;
    	wireless_schedule) wifi_wireless_schedule $*;;
    	chan_detect) wifi_csd $*;;
    	check) wifi_check "$*";;
    	start) wifi_start "$*";;
    	onemesh) wifi_onemesh $*;;
    	search) wifi_onemesh_search $*;;
    	unload) wifi_unload "$*";;
    	tpie) wifi_update_tpie $*;;
    	reload|*) wifi_reload "$*";;
    esac
else
    case $action in
    	--help|help) usage;;
    	up) wifi_updown "enable" "$*";;
    	down) $WIFICLI stop;;
    	detect) wifi_detect "$*";;
		#default) wifi_default "$*";;
    	vap|hostapd) ubus call wifix update "{\"vname\":\"$*\"}";;
    	wpsswitch) ubus call wifix update "{\"rname\":\"$*\"}";;
    	mode) ubus call wifix mode "{\"rname\":\"$*\"}";;
    	radio)
    		# TWT/OFDMA
    		# if not specific dev name, apply it for all devices
    		local devs=${*:-$DEVICES}
    		if [ "$devs" != "$DEVICES" ]; then
    			local intf=$(echo $DEVICES | grep "${devs}")
    			if [ -z "$intf" ]; then
    				devs=$DEVICES
    			fi
    		fi
    		tpdbg "/sbin/wifi, radio $devs"
    		ubus call wifix update "{\"rname\":\"$devs\"}"
    		;;
    	#country) wifi_country "$*";;
    	wps) wifi_wps $*;;
    	vlan)  wifi_vlan $*;;
    	macfilter) ubus call wifix macfilter "{\"action\":\"$*\"}";;
    	atf) wifi_atf "$*";;
    	smart) ubus call wifix smart "{\"rname\":\"$*\"}";;
    	init) ubus call wifix startup;;
    	led) wifi_led_set "$*";;
    	disconnsta) wifi_disconnect_stas "$*";;
    	wireless_schedule) wifi_wireless_schedule $*;;
    	chan_detect) wifi_csd $*;;
        check) wifi_check "$*";;
    	start) ubus call wifix start;;
    	onemesh) wifi_onemesh $*;;
        search) wifi_onemesh_search $*;;
    	unload) wifi_unload "$*";;
    	tpie) wifi_update_tpie $*;;
    	startup) ubus call wifix startup;;
		mld)
			#ubus call wifix reload
			local vaps=`get_mld_vaps $*`
			[ -n "$vaps" ] && ubus call wifix mld "{\"vname\":\"$vaps\"}"
			;;
    	reload|*) ubus call wifix reload "{\"rname\":\"$*\"}";;
    esac
fi
lock -u /var/run/wifi.lock
